# @file		start
# 		start a given unit
#
# @author	Wes Garland, wes@kingsds.network
# @date		Feb 2022
#

set -- "$args"

while [ "$1" ]
do
  unitGlob="$1"
  shift
  (cd "${SYSTEMD_CONF_ROOT}/system" && ls $unitGlob.service)\
  | sed 's/\.service$//' \
  | while read unit
    do
      $make unit="$unit" -f "${SHYSTEMD_LIB_DIR}"/service.mk start
    done
done
