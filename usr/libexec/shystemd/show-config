# @file		show-config
# 		Dump the current shystemctl configuration.
#
# @author	Wes Garland, wes@kingsds.network
# @date		Feb 2022
#

compgen -e \
| egrep 'SH?YSTEMD' \
| while read var
  do
    eval value=\"\$$var\"
    echo "$var=$value"
  done
echo "make=$make"

. "${SHYSTEMD_LIB_DIR}"/for-each-unit

dump()
{
  unit="$1"
  echo
  echo "********* $unit *********"
  $make unit="$unit" -f "${SHYSTEMD_LIB_DIR}"/service.mk debug
}
forEachUnit dump
