# -*-  Mode: sh; tab-width: 2; indent-tabs-mode: nil; sh-basic-offset: 2; -*-
# @file       restart
#             restart units - stop and then start
#
# @author     Wes Garland, wes@kingsds.network
# @date       Feb 2022
#

. "${SHYSTEMD_LIB_DIR}"/for-each-unit

restart()
{
  $make unit="$1" -f "${SHYSTEMD_LIB_DIR}"/service.mk restart
}

forEachUnit restart
